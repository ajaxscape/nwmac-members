{% extends "layouts/form-layout.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle="Change BMFA number" if edit else "Enter BMFA number" %}
{% set backLink="/details/check-details" if edit else "/details/age-group" %}

{% block formContent %}
  {% call govukFieldset({
    legend: {
      text: pageTitle,
      classes: "govuk-fieldset__legend--l",
      isPageHeading: true
    }
  }) %}

    {{ govukRadios({
      name: "bmfaThroughClub",
      value: data.bmfaThroughClub,
      fieldset: {
        legend: {
          text: 'BMFA membership registered through the club.',
          classes: "govuk-fieldset__legend--m"
        }
      },
      items: [
        {
          value: "yes",
          text: "Yes"
        },
        {
          value: "no",
          text: "No"
        }
      ],
      errorMessage: mapToError(errors, "nonClubContact")
    }) }}

    {{ govukInput({
      label: {
        text: "BMFA Number"
      },
      id: "bmfaNumber",
      name: "bmfaNumber",
      value: data.bmfaNumber,
      inputmode: "numeric",
      attributes: { maxlength: 6 }
    }) }}

  {% endcall %}
{% endblock %}
