{% extends "layouts/main-layout.njk" %}
{% set mainClasses = "govuk-main-wrapper--l" %}

{% set pageTitle="Payment confirmation" %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">{{ pageTitle }}</h1>

        <p class="govuk-body">Thank you for confirming your payment.</p>

        <h2 class="govuk-heading-m">What happens next</h2>

        <p class="govuk-body">You will receive a confirmation of payment email once the club treasurer can confirm your payment was successful.</p>

        <p class="govuk-body">In the meantime you can <a href="/details" class="govuk-link">view your details.</a></p>
    </div>
</div>
{% endblock %}