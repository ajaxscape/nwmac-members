{% extends "layouts/govuk.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/password-input/macro.njk" import govukPasswordInput %}

{% set pageTitle="Enter credentials" %}
{% set backLink="/details/" + data.state + "/name" %}

{% block content %}
  <form method="post" novalidate="novalidate" action="">
  {% call govukFieldset({
    legend: {
      text: pageTitle,
      classes: "govuk-fieldset__legend--l",
      isPageHeading: true
    }
  }) %}

    {{ govukInput({
      label: {
        text: "Email address"
      },
      classes: "govuk-!-width-two-thirds",
      id: "email",
      name: "email",
      value: email,
      autocomplete: "email",
      errorMessage: mapToError(errors, "email")
    }) }}

    {{ govukPasswordInput({
      label: {
        text: "Password"
      },
      classes: "govuk-!-width-two-thirds",
      id: "password-input",
      name: "password",
      errorMessage: mapToError(errors, "password")
    }) }}

  {% endcall %}

  {{ govukButton({
    text: "Login"
  }) }}
  </form>
{% endblock %}
