{% extends "layouts/govuk.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/password-input/macro.njk" import govukPasswordInput %}

{% set pageTitle="Check your email" %}

{% block content %}
    <h1 class="govuk-heading-l">{{ pageTitle }}</h1>

    <p class="govuk-body">
      We have just emailed <strong>{{ data.email }}</strong> with a link to continue your application.
    </p>

    <p class="govuk-body">
      Make sure the email has <strong>NWMAC Membership Link</strong> in the title before clicking the link.
    </p>

    <p class="govuk-body">
      If you can't find the email, it may be in your spam folder.  If you still cannot find it, try entering your email again <a class="govuk-link" href="/auth/enter-email">here</a>
    </p>

